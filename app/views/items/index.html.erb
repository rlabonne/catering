<h1>Items</h1>
<p> </p>
<%= link_to "New Item", new_item_path(@item), class: 'btn btn-success' %>
<div class="row">
  <div class="col-md-10">
    <% @items.each do |item| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
              <%= link_to item.name, item %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
</div>
