<h1>Item Details</h1>
<div class="row">
  <div class="col-md-8">
    <p>Name: <%= @item.name %></p>
    <p>Description: <%= @item.description %></p>
    <p>Category: <%= @item.category %></p>
    <p>Yield Qty: <%= @item.yieldQty %></p>
    <p>Yield Unit: <%= @item.yieldUnit %></p>
    <p>Serving Qty: <%= @item.servingQty %></p>
    <p>Price: <%= @item.price %></p>
    <p>Price Unit: <%= @item.priceUnit %></p>
    <p>Notes: <%= @item.notes %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_item_path(@item), class: 'btn btn-success' %>
    <%= link_to "Delete", @item, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this item?' } %>
  </div>
</div>
