<%= form_for [contact] do |f| %>
  <% if contact.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(contact.errors.count, "error") %>.</h4>
      <ul>
        <% contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(contact.errors[:firstName]) do %>
    <%= f.label :firstName %>
    <%= f.text_field :firstName, class: 'form-control', placeholder: "Enter first name" %>
  <% end %>
  <%= form_group_tag(contact.errors[:lastName]) do %>
    <%= f.label :lastName %>
    <%= f.text_field :lastName, class: 'form-control', placeholder: "Enter last name" %>
  <% end %>
  <%= form_group_tag(contact.errors[:company]) do %>
    <%= f.label :company %>
    <%= f.text_field :company, class: 'form-control', placeholder: "Enter company name" %>
  <% end %>
  <%= form_group_tag(contact.errors[:phone1]) do %>
    <%= f.label :phone1 %>
    <%= f.text_field :phone1, class: 'form-control', placeholder: "Enter phone number" %>
  <% end %>
  <%= form_group_tag(contact.errors[:phone2]) do %>
    <%= f.label :phone2 %>
    <%= f.text_field :phone2, class: 'form-control', placeholder: "Enter phone number" %>
  <% end %>
  <%= form_group_tag(contact.errors[:email]) do %>
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control', placeholder: "Enter email address" %>
  <% end %>
  <%= form_group_tag(contact.errors[:address1]) do %>
    <%= f.label :address1 %>
    <%= f.text_field :address1, class: 'form-control', placeholder: "Enter address line 1" %>
  <% end %>
  <%= form_group_tag(contact.errors[:address2]) do %>
    <%= f.label :address2 %>
    <%= f.text_field :address2, class: 'form-control', placeholder: "Enter address line 2" %>
  <% end %>
  <%= form_group_tag(contact.errors[:city]) do %>
    <%= f.label :city %>
    <%= f.text_field :city, class: 'form-control', placeholder: "Enter city" %>
  <% end %>
  <%= form_group_tag(contact.errors[:state]) do %>
    <%= f.label :state %>
    <%= f.text_field :state, class: 'form-control', placeholder: "Enter state" %>
  <% end %>
  <%= form_group_tag(contact.errors[:zipcode]) do %>
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode, class: 'form-control', placeholder: "Enter zipcode" %>
  <% end %>
  <%= form_group_tag(contact.errors[:notes]) do %>
    <%= f.label :notes %>
    <%= f.text_area :notes, rows: 8, class: 'form-control', placeholder: "Enter any relevant notes" %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
