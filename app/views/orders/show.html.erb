<h1>Order Details</h1>
<div class="row">
  <div class="col-md-8">
    <p>Order Number: <%= @order.orderNum %></p>
    <p>Order Total: <%= @order.orderTotal %></p>
    <p>Category: <%= @order.category %></p>
    <p>Payment Status: <%= @order.paymentStatus %></p>
    <p>Receipt Number: <%= @order.receiptNum %></p>
    <p>Delivery: <%= @order.delivery %></p>
    <p>Delivery Date: <%= @order.deliveryDate %></p>
    <p>Order Status: <%= @order.orderStatus %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_order_path(@order), class: 'btn btn-success' %>
    <%= link_to "Delete", @order, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this order?' } %>
  </div>
</div>
